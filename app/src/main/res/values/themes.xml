<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelApp" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="Theme.TravelApp" parent="Base.Theme.TravelApp" />

    <style name="CustomSearchViewTheme" parent="Theme.AppCompat.Light">
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>
    
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_in_left</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">Search here</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>