                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginEnd="20dp"
                                        android:text="Boracay Bliss Getaway"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <TextView
